{
	"name": "miami-paradise-studio",
	"version": "2.0.0",
	"description": "Miami Paradise Studio - We build competitive worlds that fight back",
	"main": "index.html",
	"scripts": {
		"start": "npx serve . -p 8000",
		"dev": "npx serve . -p 8000 --live",
		"build": "echo 'No build process required - static site'",
		"test": "npm run test:lighthouse && npm run test:accessibility && npm run test:html",
		"test:lighthouse": "npx lighthouse http://localhost:8000 --output=html --output-path=./reports/lighthouse.html",
		"test:accessibility": "npx pa11y http://localhost:8000",
		"test:html": "npx html-validate *.html",
		"optimize:images": "npx imagemin assets/images/* --out-dir=assets/images/optimized",
		"analyze:bundle": "npx bundlesize",
		"validate:css": "npx stylelint assets/css/*.css",
		"validate:js": "npx eslint assets/js/*.js",
		"validate:html": "npx html-validate *.html",
		"security:audit": "npx audit-ci --config .audit-ci.json",
		"performance:test": "npx lighthouse-ci autorun",
		"deploy:netlify": "npx netlify deploy --prod --dir=.",
		"deploy:vercel": "npx vercel --prod",
		"serve:https": "npx serve . -p 8443 --ssl-cert cert.pem --ssl-key key.pem",
		"generate:sitemap": "node scripts/generate-sitemap.js",
		"compress": "npx gzip-size-cli assets/css/style-new.css assets/js/main-new.js",
		"precommit": "npm run validate:html && npm run validate:css && npm run validate:js"
	},
	"keywords": [
		"game-studio",
		"competitive-gaming",
		"pvp",
		"voice-commands",
		"tactical-shooter",
		"shard-protocol",
		"miami-paradise-studio",
		"pwa",
		"accessibility",
		"performance"
	],
	"author": "Miami Paradise Studio",
	"license": "MIT",
	"homepage": "https://miamiparadise.studio",
	"repository": {
		"type": "git",
		"url": "https://github.com/miamiparadise/studio-website.git"
	},
	"bugs": {
		"url": "https://github.com/miamiparadise/studio-website/issues"
	},
	"devDependencies": {
		"@lhci/cli": "^0.12.0",
		"audit-ci": "^6.6.1",
		"bundlesize": "^0.18.1",
		"eslint": "^8.55.0",
		"gzip-size-cli": "^5.1.0",
		"html-validate": "^8.7.4",
		"imagemin": "^8.0.1",
		"imagemin-cli": "^7.0.0",
		"lighthouse": "^11.4.0",
		"netlify-cli": "^17.10.1",
		"pa11y": "^7.0.0",
		"serve": "^14.2.1",
		"stylelint": "^16.0.2",
		"vercel": "^32.7.2"
	},
	"bundlesize": [
		{
			"path": "./assets/css/style-new.css",
			"maxSize": "30kb",
			"compression": "gzip"
		},
		{
			"path": "./assets/js/main-new.js",
			"maxSize": "25kb",
			"compression": "gzip"
		},
		{
			"path": "./assets/js/analytics.js",
			"maxSize": "15kb",
			"compression": "gzip"
		}
	],
	"lighthouse-ci": {
		"ci": {
			"collect": {
				"staticDistDir": ".",
				"url": [
					"http://localhost:8000/",
					"http://localhost:8000/shard-protocol.html"
				]
			},
			"assert": {
				"assertions": {
					"categories:performance": [
						"error",
						{
							"minScore": 0.9
						}
					],
					"categories:accessibility": [
						"error",
						{
							"minScore": 1.0
						}
					],
					"categories:best-practices": [
						"error",
						{
							"minScore": 0.9
						}
					],
					"categories:seo": [
						"error",
						{
							"minScore": 0.9
						}
					],
					"categories:pwa": [
						"error",
						{
							"minScore": 0.9
						}
					]
				}
			},
			"upload": {
				"target": "temporary-public-storage"
			}
		}
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2021": true
		},
		"extends": "eslint:recommended",
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"rules": {
			"no-unused-vars": "warn",
			"no-console": "off",
			"prefer-const": "error",
			"no-var": "error"
		}
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"color-hex-case": "lower",
			"color-hex-length": "short",
			"declaration-block-trailing-semicolon": "always",
			"indentation": "tab",
			"max-empty-lines": 2,
			"rule-empty-line-before": "always-multi-line"
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead",
		"not ie 11"
	],
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	}
}